---
layout: layouts/base
---

{% macro item(name, text, year, disabled=false) %}
  <li class="sm:grid grid-cols-8 flex-col justify-between relative py-3 border-y border-gray-400 -mt-px hover:bg-slate-50">
    <div class="col-span-2">
      <h2 class="">{{ name }}</h2>
    </div>
    <div class="col-span-5">
      <p class="text-gray-400">{{ text }}</p>
    </div>
    <div class="col-span-1 text-right">
      {{ year }}
    </div>
  </li>
{% endmacro %}

{% macro number(number) %}
  <div class="inline-flex w-[2em] items-center justify-center text-[.7em] leading-tight rounded-[100%] bg-gray-400 text-white">{{ number }}</div>
{% endmacro %}

{% macro heading(text, nr) %}
  <h2 class="text-gray-400 flex gap-4 items-center">
    {# {{number(nr)}}  #}
    {{ text }}
  </h2>
{% endmacro %}

{# {% macro number(number) %}
