---
layout: layouts/base
---

{% macro item(name, text, year, link) %}
  {% if link %}
  <a href="{{ link }}">
  {% endif %}
    <li class="sm:grid grid-cols-8 flex-col justify-between relative py-3 border-y -mt-px border-gray-400 hover:bg-slate-50">
      <div class="col-span-2">
        <h2 class="">{{ name }}</h2>
      </div>
      <div class="col-span-5">
        <p class="text-gray-400 max-w-[88ch]">{{ text | safe }}</p>
      </div>
      <div class="col-span-1 text-right">
        {{ year }}
      </div>
    </li>
  {% if link != '' %}
  </a>
  {% endif %}
{% endmacro %}

{% macro itemSmall(name, text, link) %}
  {% if link %}
  <a href="{{ link }}">
  {% endif %}
    <li class="grid grid-cols-2 gap-x-2 max-w-[550px]">
      <div class="">
        <h2 class="">{{ name }}</h2>
      </div>
      <div class="">
        <p class="text-gray-400 max-w-[88ch]">{{ text | safe }}</p>
      </div>
    </li>
  {% if link != '' %}
  </a>
  {% endif %}
{% endmacro %}

{% macro number(number) %}
  <div class="inline-flex w-[2em] items-center justify-center text-[.7em] leading-tight rounded-[100%] bg-gray-400 text-white">{{ number }}</div>
{% endmacro %}

{% macro heading(text, nr) %}
<a href="#{{nr}}">
  <h2 id="{{nr}}" class="text-gray-400 flex gap-8 items-center pt-4">
    {{number(nr)}} 
    {{ text }}
  </h2>
</a>
{% endmacro %}

