---
layout: layouts/base
---

<ul class="grid lg:grid-cols-2 gap-7 mb-24">
{%- for item in featuredsites -%}
  <a 
  class="group" 
  href="{{ item.url }}" 
  target="_blank"
  noopener
  noreferrer
  data-frame-info-top=""
  data-frame-info-btm="
  <div class='flex flex-wrap gap-4'>
    <span class='name text-sm'>{{ item.name }}</span>
    {% for tech in item.tech %}
      <div class='flex gap-2 items-center'>
        <div class='w-3 h-3 rounded-full relative overflow-hidden flex text-sm'>
          <i class='w-full h-full' data-tech='{{ tech }}'></i>
        </div>
        <span class='techname opacity-50 text-sm'>{{ tech }}</span>
      </div>
    {% endfor %}
    </div>
    "
    >
      <li class="aspect-video flex flex-col justify-between relative bg-slate-50 rounded overflow-hidden">
        <div class="flex flex-col">
          <div class="bg-slate-300">
            <div class="flex text-sm text-white opacity-60">
              {% for tech in item.tech %}
              <div class="relative w-full uppercase">
                  <span class='techname text-sm z-20 opacity-70 absolute px-2 py-[2px]'>{{ tech }}</span>
                  <div class='w-full h-full relative px-2 py-[2px]' data-tech='{{ tech }}'>
                    {{ tech }}
                  </div>
              </div>
              {% endfor %}
            </div>
          </div>
          <h2 class="p-3 text-lg md:text-xl">{{ item.name }}</h2>
          {# <p class="opacity-40">{% for type in item.type %}#{{ type }} {% endfor %}</p> #}
        </div>
        <div class="flex flex-col gap-2">
          <p class="opacity-80 p-3">
            {{ item.year }} â€“ {{ item.text }}
          </p>
        </div>
      </li>
    </a>
  {% endfor %}
</ul>

<ul class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-7">
  {%- for item in sites -%}
    {% if item.online == false %}
      <div class="aspect-video flex flex-col justify-between p-3 relative bg-slate-50 rounded overflow-hidden cursor-not-allowed opacity-50">
        <svg class="w-full h-full absolute top-0 left-0">
            <line x1='0' y1='100%' x2='100%' y2='0' stroke="lightgray"/>
        </svg>
        <h2 class="">{{ item.name }}</h2>
        <p class="opacity-40 text-sm">{{ item.text }}</p>
      </div>
    {% else %}
  <a 
  class="link | group" 
  href="{{ item.url }}" 
  target="_blank"
  noopener
  noreferrer
  data-frame-info-top=""
  data-frame-info-btm="
  <div class='flex flex-wrap gap-4'>
    <span class='name text-sm'>{{ item.name }}</span>
    {% for tech in item.tech %}
      <div class='flex gap-2 items-center'>
        <div class='w-3 h-3 rounded-full relative overflow-hidden flex text-sm'>
          <i class='w-full h-full' data-tech='{{ tech }}'></i>
        </div>
        <span class='techname opacity-50 text-sm'>{{ tech }}</span>
      </div>
    {% endfor %}
    </div>
    "
    >
      <li class="aspect-video flex flex-col justify-between p-3 relative bg-slate-50 rounded">
        <h2 class="transition-transform origin-top group-hover:translate-y-[2px]">{{ item.name }}</h2>
        <p class="opacity-40 text-sm group-hover:opacity-80 group-hover:-translate-y-[1px] transition-all">{{ item.text }}</p>
        <div class="absolute top-0 left-0 w-full h-[0] origin-top group-hover:h-[2px] transition-all flex overflow-hidden">
          {% for tech in item.tech %}
            <i 
            class="w-full"
            data-tech="{{ tech }}"
            >
            </i>
          {% endfor %}
        </div>
      </li>
    </a>
    {% endif %}
  {% endfor %}
</ul>